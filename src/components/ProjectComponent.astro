---

const {title, description, link} = Astro.props
---


<div>
    <h1> <a href={link}> {title} </a></h1>
    <p>{description}</p>
</div>


<style>

    div{
        margin-bottom: 15px;
        background-image: url("../assets/Arrows.webp");
        border: 1px solid var(--secondary-border-or-title);
        border-radius:5px;
    }

    p{
        padding-left:10px
    }
    h1{
        font-size:xx-large;
    }
    a{
        padding-left:10px;
        font-family: GohuFont, serif;
        color:cyan;
        text-decoration: none;
        transition:0.5s;
        &:hover{
            text-decoration: underline;
        }
    }
</style>